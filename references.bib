}
@article{2021.Malaguti,
  title        = {{Theory for the optimal detection of time-varying signals in cellular sensing systems}},
  author       = {Malaguti, Giulia and ten Wolde, Pieter Rein},
  year         = 2021,
  journal      = {eLife},
  volume       = 10,
  pages        = {e62574},
  doi          = {10.7554/elife.62574},
  pmid         = 33594978,
  abstract     = {{Living cells often need to measure chemical concentrations that vary in time, yet how accurately they can do so is poorly understood. Here, we present a theory that fully specifies, without any adjustable parameters, the optimal design of a canonical sensing system, in terms of two elementary design principles: (1) there exists an optimal integration time, which is determined by the input statistics and the number of receptors; (2) in the optimally designed system, the number of independent concentration measurements as set by the number of receptors and the optimal integration time, equals the number of readout molecules that store these measurements, and equals the work to store these measurements reliably; no resource is then in excess and hence wasted. Applying our theory to the E.coli chemotaxis system indicates that its integration time is not only optimal for sensing shallow gradients, but also necessary to enable navigation in these gradients.}},
