@article{1990.Li,
  title        = {{Mutual information functions versus correlation functions}},
  author       = {Li, Wentian},
  year         = 1990,
  journal      = {Journal of Statistical Physics},
  volume       = 60,
  number       = {5-6},
  pages        = {823--837},
  doi          = {10.1007/bf01025996},
  issn         = {0022-4715},
  abstract     = {{This paper studies one application of mutual information to symbolic sequences: the mutual information functionM(d). This function is compared with the more frequently used correlation functionΓ(d). An exact relation betweenM(d) andΓ(d) is derived for binary sequences. For sequences with more than two symbols, no such general relation exists; in particular,Γ(d)=0 may or may not lead toM(d)=0. This linear, but not general, independence between symbols separated by a distance is studied for ternary sequences. Also included is the estimation of the finite-size effect on calculating mutual information. Finally, the concept of “symbolic noise” is discussed.}},
