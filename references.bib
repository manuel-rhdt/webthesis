@article{1982.Segall,
  title        = {{Signal processing times in bacterial chemotaxis}},
  author       = {Segall, Jeffrey E. and Manson, Michael D. and Berg, Howard C.},
  year         = 1982,
  journal      = {Nature},
  volume       = 296,
