@article{2006.Allen,
  title        = {{Simulating rare events in equilibrium or nonequilibrium stochastic systems}},
  author       = {Allen, Rosalind J. and Frenkel, Daan and ten Wolde, Pieter Rein},
  year         = 2006,
  journal      = {The Journal of Chemical Physics},
  volume       = 124,
  number       = 2,
  pages        = {024102},
