@article{2011.Skoge,
  title        = {{Dynamics of Cooperativity in Chemical Sensing among Cell-Surface Receptors}},
  author       = {Skoge, Monica and Meir, Yigal and Wingreen, Ned S.},
  year         = 2011,
  journal      = {Physical Review Letters},
